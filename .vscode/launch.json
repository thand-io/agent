{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Agent",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {},
            "showLog": true
        },
        {
            "name": "Launch Agent sessions",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["sessions"],
            "env": {},
            "showLog": true
        },
        {
            "name": "Launch Agent server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["server"],
            "env": {
                "THAND_SERVER_PORT": "9090",
                "THAND_LOGIN_ENDPOINT": "http://localhost:9090",
            },
            "showLog": true
        },
        {
            "name": "Run login (local)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["login", "--login-server", "http://localhost:9090"],
            "env": {},
            "showLog": true
        },
        {
            "name": "Run wizzard (remote)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["--login-server", "https://agent-717249053981.europe-west1.run.app"],
            "env": {},
            "showLog": true
        },
        {
            "name": "Run llm request",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["request", "Need access to AWS"],
            "env": {},
            "showLog": true
        },
        {
            "name": "AWS Elevation (local)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["request", "access", "--resource", "aws-prod", "--role", "aws_admin", "--duration", "PT1M", "--reason", "Need access for demo", "--login-server", "http://localhost:9090"],
            "env": {},
            "showLog": true
        },
        {
            "name": "AWS Elevation (remote)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["request", "access", "--resource", "aws-prod", "--role", "aws_admin", "--duration", "PT1M", "--reason", "Need access for demo", "--login-server", "https://agent-717249053981.europe-west1.run.app"],
            "env": {},
            "showLog": true
        }
    ]
}
